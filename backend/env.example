# Spooky Vocab Backend Environment Variables
# 复制此文件为 .env 并填入实际值

# 服务器配置
PORT=3000
NODE_ENV=production

# JWT配置
# 使用认证服务的JWT_SECRET_KEY进行token验证
AUTH_SERVICE_JWT_SECRET=your_auth_service_jwt_secret_here
# 兼容旧配置
JWT_SECRET=your_jwt_secret_change_this_in_production
JWT_EXPIRATION=24h

# 数据库路径（Docker中自动配置）
# USER_DB_PATH=/app/data/user_data.db
# DICT_DB_PATH=/app/data/ecdict.db

# 调试模式
DEBUG=false


