{
  "manifest_version": 3,
  "name": "智能英语单词助手",
  "version": "1.0.0",
  "description": "智能识别难词并显示翻译，支持自适应学习",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "config.js",
        "content/jwt-manager.js",
        "content/api-client.js",
        "content/mock-vocabulary.js",
        "content/feedback-handler.js",
        "content/translation-tooltip.js",
        "content/text-processor.js",
        "content/main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

