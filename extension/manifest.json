{
  "manifest_version": 3,
  "name": "Spooky Vocab - 智能英语单词助手",
  "version": "1.0.9",
  "description": "智能识别网页中的生词并显示翻译，支持间隔重复学习算法，帮助你高效记忆英语单词。",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://your-domain.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "version.js",
        "config.js",
        "content/jwt-manager.js",
        "content/api-client.js",
        "content/feedback-handler.js",
        "content/translation-tooltip.js",
        "content/text-processor.js",
        "content/main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
